<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unical.informatica.progettouid.controller.Admin.AggiungiPersonalTrainerController">

    <top>
        <VBox styleClass="top" stylesheets="@../../styles/home.css">
            <Label text="Aggiungi Personal Trainer">
                <graphic>
                    <FontIcon iconLiteral="fas-user-plus" />
                </graphic>
                <padding>
                    <Insets bottom="10" top="10" />
                </padding>
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </VBox>
    </top>
    <left>
        <VBox maxWidth="95" minWidth="95" spacing="10" styleClass="sidebar" stylesheets="@../../styles/sidebar.css">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToHome">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-home" />
                        <Text text="Home">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToCheckIn">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-user-check" />
                        <Text text="Check-in">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToMembers">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-users" />
                        <Text text="Membri">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToAddUser">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-user-plus" />
                        <Text text="Aggiungi utente">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToAddPT">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-user-plus" />
                        <Text text="Aggiungi PT">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToAddCourse">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-walking" />
                        <Text text="Aggiungi corso">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToBilling">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="far-credit-card" />
                        <Text text="Billing">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToAccount">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="far-user" />
                        <Text text="Account">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button" onAction="#navigateToSettings">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="fas-cogs" />
                        <Text text="Impostazioni">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>

            <Button maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <VBox alignment="CENTER" spacing="5" styleClass="sidebar-button">
                        <FontIcon iconLiteral="far-question-circle" />
                        <Text text="Help">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Text>
                    </VBox>
                </graphic>
            </Button>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" styleClass="background">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <GridPane hgap="15" vgap="10">
                    <padding>
                        <Insets top="10" />
                    </padding>

                    <!-- Nome -->
                    <Label text="Nome *" styleClass="form-label"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nomeField" promptText="Nome"
                               GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Cognome -->
                    <Label text="Cognome *" styleClass="form-label"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="cognomeField" promptText="Cognome"
                               GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Data di Nascita -->
                    <Label text="Data di Nascita *" styleClass="form-label"
                           GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <DatePicker fx:id="dataNascitaPicker" promptText="GG/MM/AAAA"
                                GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Specializzazione -->
                    <Label text="Specializzazione *" styleClass="form-label"
                           GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <ComboBox fx:id="specializzazioneCombo" promptText="Seleziona specializzazione"
                              GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Email -->
                    <Label text="Email *" styleClass="form-label"
                           GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="emailField" promptText="email@esempio.com"
                               GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <!-- Telefono -->
                    <Label text="Telefono *" styleClass="form-label"
                           GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="telefonoField" promptText="+39 XXX XXXXXXX"
                               GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>

                <VBox spacing="10" styleClass="password-section">
                    <Label text="Credenziali di Accesso" styleClass="section-header">
                        <graphic>
                            <FontIcon iconLiteral="fas-key" />
                        </graphic>
                    </Label>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="passwordField" editable="false"
                                   promptText="La password verrà generata automaticamente"
                                   styleClass="password-field" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="copyPasswordButton" styleClass="copy-button">
                            <graphic>
                                <FontIcon iconLiteral="fas-copy" />
                            </graphic>
                            <tooltip>
                                <Tooltip text="Copia password" />
                            </tooltip>
                        </Button>
                    </HBox>

                    <Label text="La password verrà mostrata una sola volta dopo il salvataggio"
                           styleClass="password-info"/>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="annullaButton" text="Annulla">
                        <graphic>
                            <FontIcon iconLiteral="fas-times" />
                        </graphic>
                    </Button>
                    <Button fx:id="salvaButton" text="Salva">
                        <graphic>
                            <FontIcon iconLiteral="fas-check" />
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>