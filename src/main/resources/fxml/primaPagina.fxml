<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="it.unical.informatica.progettouid.controller.PrimaPaginaController"
           prefHeight="600.0" prefWidth="1000.0">

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Text style="-fx-font-size: 24px;" text="Benvenuto in FlexFit Gym"/>
        <Text style="-fx-font-size: 16px;" text="Seleziona il tipo di accesso"/>

        <Button fx:id="btnClient"
                text="Accesso Cliente"
                onAction="#onClientLogin"
                styleClass="login-button"
                prefWidth="200.0"/>

        <Button fx:id="btnAdmin"
                text="Accesso Amministratore"
                onAction="#onAdminLogin"
                styleClass="login-button"
                prefWidth="200.0"/>

        <Button fx:id="btnTrainer"
                text="Accesso Personal Trainer"
                onAction="#onTrainerLogin"
                styleClass="login-button"
                prefWidth="200.0"/>
    </VBox>

</StackPane>
